{
    "compilerOptions": {
        "target": "ES2024",
        "module": "Node16",
        "moduleResolution": "Node16",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./",
        "skipLibCheck": true,
        "paths": {
            "@models/*": ["./@cds-models/*/index.ts"],
            "@/*": ["./srv/*"]
        }
    },
    "include": ["srv"],
    "exclude": ["node_modules"]
}
